<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
		.title {
			font-size: x-small;
			padding: 0px 0px 0px 0px;
			border: thick;
			border-color: black;
		}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:east size="20">
			<g:HTML></g:HTML>
		</g:east>
		<g:west size="20">
			<g:HTML></g:HTML>
		</g:west>
		<g:north size="10">
			<g:FlowPanel>
				<g:MenuBar ui:field="menuBar"></g:MenuBar>
					<g:HTMLPanel ui:field="titlePanel">
						<h2 ui:field="titleText">Title</h2>
						<p ui:field="descriptionText">Long description text.</p>
					</g:HTMLPanel>		
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:DeckPanel ui:field="mainPanel"></g:DeckPanel>
		</g:center>
		<g:south size="10">
			<g:HTML></g:HTML>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 